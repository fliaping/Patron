<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deepwits.Patron">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:sharedUserId="patron-recorder"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Recorder.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

         <service
             android:name=".Recorder.RecordService"
             android:enabled="true"
             android:exported="true" />

        <service android:name="net.majorkernelpanic.streaming.rtsp.RtspServer" />

        <provider
            android:name=".DataBase.RecorderProvider"
            android:authorities="com.deepwits.Patron.StorageManager"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>
